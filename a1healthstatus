    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const themeToggleBtn = document.getElementById('theme-toggle');
            const lightIcon = document.getElementById('theme-toggle-light-icon');
            const darkIcon = document.getElementById('theme-toggle-dark-icon');
            if (localStorage.getItem('theme') === 'dark') {
                lightIcon.classList.add('hidden');
                darkIcon.classList.remove('hidden');
            }
            themeToggleBtn.addEventListener('click', () => {
                document.documentElement.classList.toggle('dark');
                lightIcon.classList.toggle('hidden');
                darkIcon.classList.toggle('hidden');
                localStorage.setItem('theme', document.documentElement.classList.contains('dark') ? 'dark' : 'light');
            });

            const cards = document.querySelectorAll('.card');
            cards.forEach(card => card.addEventListener('click', (e) => {
                if (!e.target.closest('.speak-btn')) card.classList.toggle('is-flipped');
            }));
            
            const q1Input = document.getElementById('q1-input');
            const q1Feedback = document.getElementById('q1-feedback');
            q1Input.addEventListener('input', () => {
                const answer = q1Input.value.trim().toLowerCase();
                if (answer === 'feels') {
                    q1Feedback.textContent = 'Correct! We use "feels" for she/he/it. ‚úÖ';
                    q1Feedback.className = 'font-semibold text-sm mt-2 h-5 text-green-600 dark:text-green-400';
                }
            });

            const q2Input = document.getElementById('q2-input');
            const q2Feedback = document.getElementById('q2-feedback');
            q2Input.addEventListener('input', () => {
                const answer = q2Input.value.trim().toLowerCase();
                if (answer === 'pain') {
                     q2Feedback.textContent = 'Perfect! ‚úÖ';
                    q2Feedback.className = 'font-semibold text-sm mt-2 h-5 text-green-600 dark:text-green-400';
                }
            });

            const accordions = document.querySelectorAll('.accordion-toggle');
            accordions.forEach(accordion => {
                accordion.addEventListener('click', () => {
                    const content = accordion.nextElementSibling;
                    const arrow = accordion.querySelector('.arrow');
                    if (content.style.maxHeight) {
                        content.style.maxHeight = null;
                        accordion.querySelector('span').textContent = 'See possible answers';
                        if(arrow) arrow.textContent = '‚ñº';
                    } else {
                        content.style.maxHeight = content.scrollHeight + "px";
                        accordion.querySelector('span').textContent = 'Hide answers';
                        if(arrow) arrow.textContent = '‚ñ≤';
                    }
                });
            });

            const productionContainer = document.getElementById('production-container');
            const productionBtn = document.getElementById('production-btn');
            productionBtn.addEventListener('click', () => {
                productionContainer.innerHTML = `<div class="text-center py-8"><h3 class="text-2xl font-bold text-green-800 dark:text-green-300">Lesson Complete! ü•≥</h3><p class="mt-2 text-lg text-gray-700 dark:text-gray-300">Great job! We hope you feel better soon.</p></div>`;
            });
        });
    </script>
